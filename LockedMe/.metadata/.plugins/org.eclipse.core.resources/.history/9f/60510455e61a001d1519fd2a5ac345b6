package com.LockedMe;

import java.io.File;
import java.io.IOException;
import java.util.Scanner;

public class FilesOperation {

	// Creating a File object for directory

	File directoryPath = new File("C:/Users/Ashok/Documents/locaters");
	
	void get_listFiles() {

		// List of all files and directories
		String contents[] = directoryPath.list();

		System.out.println("List of files and directories in the directory:");
		for (int i = 0; i < contents.length; i++) {

			System.out.println(contents[i]);
		}
	}



	void Advance_options()  {
         
	System.out.println(" Select below optins what you want do\n"+ "1 : Add file\n" + "2 : Delete file\n" + "3 : Search file\n"+ "4 : Go to Main menu\n");
	
	Scanner sc = new Scanner(System.in);
	int advance_input = sc.nextInt();
	switch(advance_input) {
	  case 1:
		  try {
			add_files();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		  
		  
		  
	    // code block
	    break;
	  case 2:
		  delete_files();
		  
	    // code block
	    break;
	  case 3:
		  search_files();
		  
	  case 4: Main_menu();	  
	}
	
	}
	
	void search_files() {
		
	}
	void add_files() throws IOException {
		Scanner input = new Scanner(System.in);
        System.out.print("Enter the desired name of your file: ");
        String fileName = input.nextLine();
        fileName = fileName + ".txt";

        File file1 = new File("C:/Users/Ashok/Documents/locaters/"+fileName);
        file1.createNewFile();
       
	}

	void delete_files() {

		Scanner input = new Scanner(System.in);
        System.out.print("Enter the desired name of your file: ");
        String fileName = input.nextLine();
        fileName = fileName + ".txt";

        File file1 = new File("C:/Users/Ashok/Documents/locaters/"+fileName);
        file1.delete();
	}

	void closeApp() {
		
//		System.exit(0);
		System.exit(0);
   }

	void Main_menu() {
		
		FilesManager fm1 = new FilesManager();
		fm1.printoptions();
	}



	public void again_enterNumber() {
		FilesManager fm1 = new FilesManager();
		System.out.println("PLease Select Correct Number");
		fm1.printoptions();
		
	}



	public void enter_again() {
		FilesManager fm1 = new FilesManager();
		System.out.println("please select correct options");
		fm1.printoptions();
		fm1.Check_userInput();
		// TODO Auto-generated method stub
		
	}

}
